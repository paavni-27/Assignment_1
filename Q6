import java.util.Scanner;

public class My {
    public static void main(String[] args) {

//Q6. Reverse a number
        System.out.print("enter any number: ");
        Scanner scn = new Scanner(System.in);
        int num = scn.nextInt();
        int rem,rev=0;
        while(num>0) {
             rem = num%10;
             rev= rev*10+rem;
            num=num/10;
        }
        System.out.print( "the reverse of the given number is " + rev);


    }
}
